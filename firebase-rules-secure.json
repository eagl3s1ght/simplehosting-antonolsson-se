{
  "rules": {
    "publicGame": {
      "flows": {
        ".read": true,
        ".write": "auth != null",
        ".indexOn": ["spawnTime", "layer"]
      },
      "players": {
        ".read": true,
        "$playerId": {
          ".write": "auth != null && (auth.uid == $playerId || !data.exists() || auth.uid == data.child('id').val() || $playerId.beginsWith('bot-') || $playerId.beginsWith('local-p2-'))"
        }
      }
    },
    ".read": "now < 1765062000000",
    ".write": false
  }
}
