{
  "rules": {
    "publicGame": {
      "flows": {
        ".read": true,
        ".write": "auth != null",
        ".indexOn": ["spawnTime", "layer"]
      },
      "players": {
        ".read": true,
        "$playerId": {
          ".write": "auth != null && (auth.uid == $playerId || !data.exists() || auth.uid == data.child('id').val())"
        }
      },
      "highscores": {
        ".read": "now < 1765062000000",
        "$scoreId": {
          ".write": "auth != null && now < 1765062000000 && (auth.uid == $scoreId || !data.exists())"
        },
        ".indexOn": "totalCatches"
      }
    },
    ".read": "now < 1765062000000",
    ".write": false
  }
}
